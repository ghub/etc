
if [ -f ~/.profile ]; then
    . ~/.profile
fi

source_profiles()
{
    if [ -d $1 ]; then
        for i in $1/*.sh; do
            if [ -r $i ]; then
                . $i
            fi
        done
        unset i
    fi
}

source_profiles ~/etc/profile.d
source_profiles ~/etc.local/profile.d

unset source_profiles
